//---Variables----//
$white: #FFFFFF;
$highlight: #975c0e;
$gray_background: #f8f5f1;

//---Global Styles----//
.wrapper {
  width: 1440px;
  max-width: 90%;
  margin: 0 auto;
}
body {
  font-family: "museo-sans";
  color: white;
  font-weight: 700;
}
* {
  box-sizing: border-box;
}
.button {
  border: none;
  outline: none;
  border-radius: 2rem;
  padding: .5rem 3rem;
  font-weight: 700;
  color: white;
  text-decoration: none;
  text-align: center;
}
.button_small {
  border: none;
  outline: none;
  border-radius: 2rem;
  padding: .5rem 1rem;
  font-weight: 700;
  color: white;
  text-decoration: none;
  text-align: center;
  font-size: 12px;
}
.button_highlight{
  background: $highlight;

}
.button_light {
  border: none;
  outline: none;
  border-radius: 2rem;
  padding: .5rem 1.5rem;
  font-weight: 700;
  color: white;
  text-decoration: none;
  text-align: center;
  background: rgba(250, 250, 250, 0.40);
}
//---Banner Styles----//
#banner {
  background-image: url(<%= asset_path("hero_img_natural_agave.jpg")%>);
  background-repeat: no-repeat;
  background-size: cover;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
    header{
      padding: 2rem 0;
    }

}
#logo{
  display: block;
  margin-left: auto;
  margin-right: auto;
    img{
      height: 40%;
      width: 40%;
    }
}
nav {
  float: right;
  a{
    color: white;
    font-weight: 700;
    text-decoration: none;
    margin-left: 2rem;
  }
}
.sub-title{
  color: white;
  text-align: center;
  margin: 0 auto 4rem;
  font-weight: 700;
}
.button_wrapper{
  text-align: center;
  margin: 0 auto 6rem;
}
.content{
  padding: 2rem 0 6rem 0;
}
//---Products - Home Page----//
#productshome{
  color: black;
  background: $gray_background;
  padding: 2rem 0 10rem 0;
  position: relative;
  .product{
    background: white;
    width: 31%;
    float: left;
    margin: -5rem 1% 0 1%;
    padding: 1rem 2.5%;
    text-align: center;
    position: relative;
    box-shadow: 0px 0px 57px 0px rgba(4, 6, 9, 0.25);
    -webkit-box-shadow: 0px 0px 57px 0px rgba(4, 6, 9, 0.25);
    -moz-box-shadow: 0px 0px 57px 0px rgba(4, 6, 9, 0.25);
    p{
      font-size: 12px;
    }
    #h3_upa{
      margin-top: 0;
    }
    h3{
      margin-top: 1em;
    }
    #circle_frame_img{
      display: block;
      img{
        width: 70%;
        height: 60%;
      }
    }
  }
}
